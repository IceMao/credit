@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta charset="utf-8" />
    <meta name="description" content="齐齐哈尔市企业信用信息系统，企业信用，信用信息" />
    <meta name="keywords" content="齐齐哈尔市企业信用信息系统，企业信用，信用信息" />
    <meta name="author" content="yang" />
    <link rel="stylesheet" href="~/styles/bootstrap.css" />
    <script src="~/scripts/jquery-2.1.1.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <title>首页--齐齐哈尔市企业信用信息管理系统</title>
    <style>
        .bg {
            background-image: url('/img/bg44.jpg');
            background-size: cover;
            background-position: left top;
            min-height: 200px;
        }
        .navbar-default .navbar-nav > li > a { color: #121527;}
        .CurrentP{position:absolute; top:10px; right:15px; color:#fff;}
        .CurrentP a{color:aliceblue;}
    </style>
</head>
<body style="height:100%;">
    <div class="bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <h1 style="padding-top:70px; color:#fff;font-size: 3.6em;text-align: center; ">
                        齐齐哈尔市企业信用信息网
                    </h1>
                </div>
            </div>
        </div>
        @if (ViewBag.UserCurrent == null)
        {
            <p class="CurrentP">
                <a asp-controller="Account" asp-action="Login" style="color:#fff;">登录</a>
            </p>
        }
        @if (ViewBag.UserCurrent != null)
        {
            @if (User.IsInRole("管理员"))
            {
                <p class="CurrentP">
                    欢迎&nbsp;@ViewBag.UserCurrent.UserName&nbsp;
                    <a asp-action="Manage" asp-controller="Home">进入后台</a>
                    <a href="javascript:$('#Logout').submit()">退出</a>
                </p>
                <form asp-action="Logout" asp-controller="Account" id="Logout"></form>
            }
            @if (User.IsInRole("联络员"))
            {
                <p class="CurrentP">
                    欢迎&nbsp;@ViewBag.UserCurrent.UserName&nbsp;
                    <a href="javascript:$('#Logout').submit()">退出</a>
                </p>
                <form asp-action="Logout" asp-controller="Account" id="Logout"></form>
            }
        }
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3">
                <div class="navbar navbar-default" style="box-shadow:none; border:none;background-color:transparent;">
                    <div style="font-size: 15px; font-weight: 600;">
                        <div class="navbar-header" >
                            <div>
                                <a class="navbar-brand" href="javascript:;" style="font-size: 1.2em; color: #061A2F;">首页</a>
                            </div>
                            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div id="navbar-main" class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">信息填报 <span class="caret"></span></a>
                                    <ul class="dropdown-menu" role="menu">

                                        <li><a asp-controller="Page" asp-action="CreateYearReportEnterprise">企业年度信用信息填报</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">信息公示名单 <span class="caret"></span></a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li><a asp-controller="Page" asp-action="InfoUnusual">经营异常名录</a></li>
                                        <li class="divider"></li>
                                        <li><a asp-controller="Page" asp-action="InfoIllegal">严重违法企业名单</a></li>
                                        <li class="divider"></li>
                                        <li><a asp-controller="Page" asp-action="InfoRandom">抽查检查公示</a></li>
                                    </ul>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">信息公告 <span class="caret"></span></a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li><a asp-controller="Page" asp-action="AnnouncementUnsual">经营异常公告</a></li>
                                        <li class="divider"></li>
                                        <li><a asp-controller="Page" asp-action="AnnouncementIllegal">严重违法企业公告</a></li>
                                        <li class="divider"></li>
                                        <li><a asp-controller="Page" asp-action="AnnouncementRandom">抽查检查公告</a></li>
                                    </ul>
                                </li>
                                <li><a href="http://gsxt.saic.gov.cn/" target="_blank">全国首页</a></li>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row" style="margin-top:70px; margin-bottom:120px;">
            <div class="col-lg-6 col-lg-offset-3" style="background-color: rgba(5, 35, 255, 0.68); border-radius: 5px; padding: 5px;">
                <form class="navbar-form navbar-left" role="search" asp-action="Search" asp-controller="Page" method="post" style="width:100%;">
                    <div class="form-group" style="width:78%; margin-right:2%;">
                        <input type="text" name="key" class="form-control" placeholder="请输入公司注册号" style="width:100%; border-radius:4px; background:#eee;font-size:1.2em;color:#424444;font-weight:600;">
                    </div>
                    <button type="submit" class="btn btn-default" style="width: 19%; background: rgba(10, 55, 121, 0.7); color: #fff; border: 1px solid rgba(11, 61, 111, 0.78);">搜索</button>
                </form>
            </div>
        </div>
    </div>  
    <footer style="margin-top:180px; ">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <p class="text-center" style="font-size: 1.2em; font-weight: 600;">&copy; copyright .yang</p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>