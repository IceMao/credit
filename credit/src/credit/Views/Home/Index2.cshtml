@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta charset="utf-8" />
    <meta name="description" content="齐齐哈尔市企业信用信息系统，企业信用，信用信息" />
    <meta name="keywords" content="齐齐哈尔市企业信用信息系统，企业信用，信用信息" />
    <meta name="author" content="yang" />
    <link rel="stylesheet" href="~/styles/bootstrap.min.css" />
    <script src="~/scripts/jquery-1.8.3.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <title>首页--齐齐哈尔市企业信用信息管理系统</title>
    <style>
        .bg {
            background-image: url('/img/4bg4.jpg');
            background-size: cover;
            background-position: left top;
            min-height: 562px;
        }

        .form-box {
            background-color: rgba(128, 128, 128,0.2);
            border-radius: 5px;
            margin: 20px auto 20px auto;
            padding: 1%;
            width: 75%;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top navbar-transparent" style="box-shadow: 0 3px 9px 0px #bbb;">
        <div class="container" style="padding:10px 0;font-size: 15px; font-weight: 600;">
            <div class="navbar-header">
                <div>
                    <a class="navbar-brand">HONER</a>
                </div>
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div id="navbar-main" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-center">

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">信息填报 <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">

                            <li><a asp-controller="Page" asp-action="CreateYearReportEnterprise">企业年度信用信息填报</a></li>
                            <li class="divider"></li>
                            <li><a asp-controller="Page" asp-action="CreateYearReportIndividual">个体年度信用信息填报</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">信息公示名单 <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a asp-controller="Page" asp-action="InfoUnusual">经营异常名录</a></li>
                            <li class="divider"></li>
                            <li><a asp-controller="Page" asp-action="InfoIllegal">严重违法企业名单</a></li>
                            <li class="divider"></li>
                            <li><a asp-controller="Page" asp-action="InfoRandom">抽查检查公示</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">信息公告 <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a asp-controller="Page" asp-action="AnnouncementUnsual">经营异常公告</a></li>
                            <li class="divider"></li>
                            <li><a asp-controller="Page" asp-action="AnnouncementIllegal">严重违法企业公告</a></li>
                            <li class="divider"></li>
                            <li><a asp-controller="Page" asp-action="AnnouncementRandom">抽查检查公告</a></li>
                        </ul>
                    </li>
                    <li><a href="http://gsxt.saic.gov.cn/" target="_blank">全国首页</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (ViewBag.UserCurrent == null)
                    {
                        <li>
                            <a asp-controller="Account" asp-action="Login">登录</a>
                        </li>
                        <li style="margin-top:-1px;">
                            <a style="border:2px solid #904A4A;" asp-controller="Account" asp-action="Register">注册</a>
                        </li>
                    }
                    @if (ViewBag.UserCurrent != null)
                    {
                        @if (User.IsInRole("管理员"))
                        {
                            <li>
                                <p style="padding-top:10px;">
                                    欢迎&nbsp;@ViewBag.UserCurrent.UserName&nbsp;
                                    <a asp-action="Manage" asp-controller="Home">进入后台</a>
                                    <a href="javascript:$('#Logout').submit()">退出</a>
                                </p>
                                <form asp-action="Logout" asp-controller="Account" id="Logout"></form>
                            </li>
                        }
                        @if (User.IsInRole("联络员"))
                        {
                            <li>
                                <p style="padding-top:10px;">
                                    欢迎&nbsp;@ViewBag.UserCurrent.UserName&nbsp;
                                    <a href="javascript:$('#Logout').submit()">退出</a>
                                </p>
                                <form asp-action="Logout" asp-controller="Account" id="Logout"></form>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <h1 style="padding-top:170px; color:#fff;font-size: 3.6em;text-align: center; ">
                        齐齐哈尔市企业信用信息网
                    </h1>
                    <h3 style="text-align: center;  text-align: center;color: #d5d5d5;font-size: 1.6em; padding: 10px 0; margin-bottom: 70px; letter-spacing: 3px;">如需填表请先登录</h3>
                    <div class="form-box">
                        <form class="navbar-form" role="search" asp-action="Search" asp-controller="Page" method="post">
                            <div class="input-group" style="width:100%">
                                <input type="text" class="form-control" name="key" placeholder="请输入公司注册号" style="font-size:1.5em; color: #424444; font-weight: 600;">
                                <span class="input-group-btn" style="width:1%;">
                                    <button class="btn btn-default" type="submit">
                                        搜索
                                    </button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer style="padding:40px 0;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <p class="text-center" style="font-size: 1.2em; color: #424444; font-weight: 600;">&copy; copyright .yang</p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>