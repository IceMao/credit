@model IEnumerable<InfoUnusual>
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<content class="InfoPage InfoUnusualPage">
    <div class="search">
        <form asp-action="SearchUnusual" asp-controller="Page" method="post">
            <input type="text" name="key" placeholder="请输入公司注册号搜索相关异常公示">
            <input class="btn1" type="submit" vlaue="搜索" />
        </form>
    </div>
    
    <div class="list">
        <h3><a asp-controller="Page" asp-action="InfoUnusual">经营异常公示</a>——搜索结果</h3>
        <ul class="list-title">
            <li class="list-name">企业名称</li>
            <li>注册号</li>
            <li>异常日期</li>
        </ul>
        @foreach (var x in Model)
        {
            <ul class="list-content">
                <li class="list-name"><a asp-controller="Page" asp-action="ArticlePageUnusual">@x.EnterpriseName</a></li>
                <li>@x.RegistrationNumber</li>
                <li>@x.DateTime.ToString("yyyy年MM月dd日")</li>
            </ul>

        }
    </div>
</content>