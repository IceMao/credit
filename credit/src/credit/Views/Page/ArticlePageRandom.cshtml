@model Announcement
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<style>
    p{font-size:1.5em; color:#000000;}
</style>
<div class="container"style="min-height:500px;">
    <div class="row" style="margin-top:40px;">
        <div class="col-md-8 col-md-offset-2 well">
            <h3 class="text-center" style="margin:10px 0 15px;">@Model.Title</h3>
            <p class="text-center" style="margin-bottom:30px;">@Model.PublicUnit</p>
            <p class="text-justify">
                @Model.Content
            </p>
            <p class="text-right" style="margin-top:50px;">@Model.PublicTime.ToString("yyyy年MM月dd日")</p>
        </div>
    </div>
</div>
