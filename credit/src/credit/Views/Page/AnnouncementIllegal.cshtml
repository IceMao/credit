@model IEnumerable<AnnouncementIllegal>
@{
Layout = "~/Views/Shared/_Layout1.cshtml";
}
<content class="APage AnnouncementIllegalPage">
    <div class="leftSide">
        <h3>严重违法信息公告</h3>
        <ul>
            @foreach (var x in Model)
            {
            <li>
                <a asp-controller="Page" asp-action="ArticlePageIllegal" asp-route-id="@x.Id">@x.title</a>
                <span>@x.DateTime</span>
            </li>

            }
        </ul>
    </div>
    <div class="rightSide">
        <h3>最新公告</h3>
        <ul>
            @foreach (var x in Model)
            {
            <li>
                <a href="#">@x.title</a>
                <span>@x.DateTime</span>
            </li>

            }
        </ul>
    </div>
</content>
