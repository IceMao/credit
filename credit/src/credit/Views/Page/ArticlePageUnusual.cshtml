@model AnnouncementUnsual
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="container">
    <div class="row" style="margin-top:20px;">
        <div class="col-md-8 col-md-offset-2 well">
            <h3 class="text-center" style="margin-bottom:20px;">@Model.title</h3>
            <p class="text-center" style="margin-bottom:20px;"><small>@Model.Writer</small></p>
            
            <p class="text-justify">
                @Model.Content
            </p>
            <p class="text-right" style="margin-bottom:20px;">@Model.DateTime.ToString("yyyy年MM月dd日")</p>
        </div>
    </div>
</div>
