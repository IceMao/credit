<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <div class="page-header">
                <h3>创建企业基本信息</h3>
            </div>
            <form id="defaultForm" class="form-horizontal" >
                <div class="form-group">
                    <label class="col-lg-3 control-label">注册号</label>
                    <div class="col-lg-5">
                        <input type="text" class="form-control" name="RegistrationNumber" id="RegistrationNumber" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">企业名</label>
                    <div class="col-lg-5">
                        <input type="text" class="form-control" name="EnterpriseName" id="EnterpriseName"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-9 col-lg-offset-3">
                        <button id="submit" class="btn btn-success">提交</button>
                         @*<input type="submit" class="btn btn-success" value="提交" />*@
                        <a asp-controller="Admin" asp-action="DetailsBaseInfo">取消</a>
                    </div>
                </div>
                
            </form>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#submit").click(function () {
            var url = "/Admin/CreateBaseInfo";
            var params = { "RegistrationNumber": $('#RegistrationNumber').val(), "EnterpriseName": $("#EnterpriseName").val() };
            $.post(url, params, function (data) {
                if (data == "error") {
                    alert("注册号已存在");

                } else {
                    window.location.href = "/Admin/DetailsBaseInfo";

                }
            })
        });

        $("#defaultForm").bootstrapValidator({
            message: '这个值没有被验证',
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'

            },
            fields: {//注册号不能重复 要有对比
                RegistrationNumber: {
                    message: '注册号没有验证',
                    validators: {
                        notEmpty: {
                            message: '注册号不能为空'
                        },
                        regexp: {
                            regexp: /^\d{15}$/,
                            message: '只能是15位数字'
                        }
                        
                    }

                },
                EnterpriseName: {
                    validators: {
                        notEmpty: {
                            message: '企业名不能为空'
                        }
                    }

                }

            }

        });
    });
</script>

