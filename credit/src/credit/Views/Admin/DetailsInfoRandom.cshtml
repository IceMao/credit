@model IEnumerable<InfoRandom>
<h3>抽查公示管理</h3>
<table class="table">
    <thead>
        <tr>
            <th>序号</th>
            <th>注册号</th>
            <th>企业名称</th>
            <th>抽查日期</th>
            <th>抽查结果</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var x in Model)
        {
            <tr>
                <td>@x.Id</td>
                <td>@x.RegistrationNumber</td>
                <td>@x.EnterpriseName</td>
                <td>@x.DateTime</td>
                <td>@x.Result</td>
                @if (User.IsSignedIn())
                {
                    <td>
                        <a asp-action="EditInfoRandom" asp-controller="Admin" asp-route-id="@x.Id">修改</a>
                        <a href="javascript:remove(@x.Id)">删除</a>
                    </td>
                }
                
            </tr>

        }

    </tbody>
</table>
@if (User.IsSignedIn())
{
    <form id="frmDelete" asp-aciton="DeleteInform" asp-controller="Admin" method="post">
        <input type="hidden" id="Id" name="id" />
    </form>
    <script>
        function remove(id)
        {
            var jug = confirm("确认删除？");
            if (jug == true) {
                $('#Id').val(id);
                $('#frmDelete').submit();
            }
        }
    </script>
}