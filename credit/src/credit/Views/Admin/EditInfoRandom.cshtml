@model InfoRandom
<form asp-controller="Admin" asp-action="EditInfoRandom" method="post">
    <h3>编辑 抽查公示信息</h3>
    <table class="table">
        <tr>
            <th>注册号</th>
            <td><input type="text" class="form-controller" value="@Model.RegistrationNumber"/></td>
        </tr>
        <tr>
            <th>企业名</th>
            <td><input type="text" class="form-controller" value="@Model.EnterpriseName" /></td>
        </tr>
        <tr>
            <th>抽查日期</th>
            <td><input type="text" class="form-controller" value="@Model.DateTime" /></td>
        </tr>
        <tr>
            <th>抽查结果</th>
            <td><select value="@Model.Result">
                <option>正常</option>
                <option>经营异常</option>
                <option>严重违法</option>
                </select>
            </td>
        </tr>
    </table>
    <p>
        <input class="btn inverse" type="submit" value="提交" />
        <a asp-controller="Admin" asp-action="DetailsInfoRandom">取消</a>
    </p>
</form>
