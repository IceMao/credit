<div id="content-header">
    <h1>经营异常公示添加</h1>
</div>
<div id="breadcrumb">
    <a asp-controller="Home" asp-action="Manage" title="Go to BackHome" class="tip-bottom"><i class="glyphicon glyphicon-home"></i> Home</a>
    <a href="#" class="current">经营异常公示添加</a>
</div><div class="container-fluid" id="AllPageLayout">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <form id="defaultForm" class="form-horizontal">
                <div class="form-group">
                    <label class="col-lg-3 control-label">注册号</label>
                    <div class="col-lg-5">
                        <input type="text" class="form-control" name="RegisteNumber" id="RegisteNumber" />
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="col-lg-3 control-label">异常日期</label>
                    <div class="col-lg-5">
                        <input id="PublicTime" type="datetime" class="form-control" name="PublicTime" value="@DateTime.Now" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-9 col-lg-offset-3">
                        <button id="submit" class="btn btn-success">提交</button>
                        <a asp-controller="Admin" asp-action="DetailsInfoUnusual">取消</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/scripts/jquery-1.8.3.min.js"></script>
<script src="~/scripts/bootstrap.min.js"></script>
<script src="~/scripts/bootstrapValidator.min.js"></script>
<script>
        $("document").ready(function () {

            $("#submit").click(function () {
                var url = "/Admin/CreateInfoUnusual";
                var params = { "RegisteNumber": $("#RegisteNumber").val(), "PublicTime": $("#PublicTime").val() };
                $.post(url, params, function (data) {
                    if (data == "success") {
                        alert("录入成功");
                        window.location.href = "/Admin/DetailsInfoUnusual";
                    } else {
                        alert("注册号不存在");

                    }

                })
            });
            $("#defaultForm").bootstrapValidator({
                live: 'disable',
                message:'这个值不合法',
                feedbackIcons:{
                    valid: 'glyphicon glyphicon-ok',
                    invalid: 'glyphicon glyphicon-remove',
                    validating:'glyphicon glyphicon-refresh'

                },
                fields: {
                    RegisteNumber: {
                        message: '注册号没有验证',
                        validators: {
                            notEmpty: {
                                message: '注册号不能为空'
                            },
                            regexp: {
                                regexp: /^\d{15}$/,
                                message: '只能是15位数字'
                            }
                        }

                    }
                    
                }
            })
        });
</script>